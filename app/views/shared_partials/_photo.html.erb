<div class="photo">
  <%= form.fields_for :assets, photo, :child_index => (photo.new_record? ? "index_to_replace_with_js" : nil) do |photo_form| %>
      <%= photo_form.file_field :photo, :class => 'photo' %>
      <%= photo_form.text_area :photo_label %>
      <div class="removeLink">
        <span class="removeImageField"> <%= t('general.label.remove') %></span>
      </div>
  <% end %>

</div>