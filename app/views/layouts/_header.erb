<% if !flash.empty? || params[:notice] || params[:alert] %>
    <div id="flash_messages">
      <% if @notice || flash[:notice] || params[:notice] %>
          <div class="flash_message notice">
            <%= @notice %>
            <%= flash[:notice] %>
            <%= params[:notice] %>
          </div>
      <% end %>

      <% if flash[:alert] || flash[:error] || params[:error] %>
          <div class="flash_message error">
            <%= flash[:alert] %>
            <%= flash[:error] %>
            <%= params[:alert] %>
          </div>
      <% end %>
    </div>
<% end %>
