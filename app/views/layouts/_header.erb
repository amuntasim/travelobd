<div class="top_bar">
  <div class="top_bar_box">
    <% if current_user %>
        <% if admin? %>
            <span><%= link_to 'Administration', admin_path %></span>
        <% else %>
            <span><%= link_to t('general.label.dashboard'), dashboard_path %></span>
        <% end %>
    <% else %>
        <%= t('welcome_guest') %>
    <% end %>
  </div>
  <div class="top_bar_box">
    <% unless current_user %>
        <span><%= link_to t('general.label.create_account'), new_user_path %></span>
        <span><%= link_to t('general.label.login'), login_path %></span>
    <% else %>
        <span><%= link_to t('general.label.logout'), logout_path %></span>

    <% end %>
  </div>
  <div class="top_bar_box">
    <div class="login_and_other collapsed">
      <%= t('general.label.login_n_other') %>
      <%= image_tag 'down_arrow.jpg', :id=> 'login_down_arrow' %>
      <%= image_tag 'up_arrow.jpg', :id=> 'login_up_arrow' %>
    </div>

    <% if I18n.locale.to_s == 'en' %>
        <%= link_to(t('general.label.see_in_bn'), {:'locale'=>'bn', :params =>params.delete_if { |key, value| key == "locale" }}, {:class=>'', :onclick => fix_language_switch}) %>
    <% else %>
        <%= link_to(t('general.label.see_in_en'), {:'locale'=>'en', :params =>params.delete_if { |key, value| key == "locale" }}, {:class=>'', :onclick => fix_language_switch}) %>
    <% end %>

  </div>

</div>
<div class="heading">
  <div class="logo">
    <a href="/"></a>
  </div>
</div>

