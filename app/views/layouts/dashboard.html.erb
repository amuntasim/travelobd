<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @title || "Welcome" %></title>
    <%= stylesheet_link_tag 'style', 'style_override', 'menu'%>
    <%= javascript_include_tag 'jquery.min', 'jquery-ui', 'rails', 'menu', 'application' %>
    <%= yield :js_css_include %>
    <%= include_tiny_mce_if_needed %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div class="wrapper">
      <div class="wrap_bdoy">
        <!--heading start -->
        <%= render 'layouts/header' %>
        <!--heading end -->
        <%= yield :over_mid_content %>
        <!--middle start -->
        <div class="midContent">
          <div class="myAccount">
            <div class="acc_wide">
              <%= render :partial=> 'layouts/my_account_links' %>

              <%= yield %>
            </div>
            <div class="acc_narrow">
              <div class="mytools">
                <h2>My Tools</h2>
                <ul>
                  <li><%= link_to 'Edit Profile', edit_user_profile_url(current_user) %></li>
                  <li><%= link_to 'Change Password', edit_user_path(:id=> 'xxx') %></li>
                  <li><a href="#">How to Place An Ad</a></li>
                  <li><a href="#">Sell Your Ad</a></li>
                  <li><a href="#">Sell Your Trailer</a></li>
                  <li><a href="#">Sell Your Product</a></li>
                  <li><a href="#">Free Legal Forms</a></li>
                </ul>
              </div>
            </div>
          </div>
        </div>

      </div>
     
      <!--<div class="mid_bot_bg"></div>-->
      <!--middle end -->

      <!--footer start -->
      <%= render 'layouts/footer' %>

      <!--footer start -->


    </div>
  </body>
</html>
