<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title><%= @title || "Welcome" %></title>
    <%= stylesheet_link_tag 'style', 'style_override', 'menu'%>
    <%= javascript_include_tag 'jquery.min', 'jquery-ui', 'rails', 'menu', 'application' %>
    <%= yield :js_css_include %>
    <%= include_tiny_mce_if_needed %>
    <%= csrf_meta_tag %>
  </head>

  <body>
    <div class="wrapper">
      <div class="wrap_bdoy">
        <!--heading start -->
        <%= render 'layouts/header' %>
        <!--heading end -->
        <!--middle start -->
        <div class="redhead_row">
          <h2>Administration Panel</h2>
        </div>
        <div class="midContent">
          <div class="myAccount">
            <div class="acc_wide">
              <%= render 'layouts/my_account_links' %>

              <div id="manage_ad" class="msg_box clear admin_panel">
                <div class="msg_top"></div>
                <div class="msg_desc">
                  <%= yield %>
                  <% if @paginate_items %>
                    <div class="admin_pagination">
                      <%= will_paginate @paginate_items %>
                    </div>
                  <% end %>
                </div>
                <div class="msg_bot"></div>
              </div>

            </div>
            <div class="acc_narrow">
              <div class="mytools">
                <h2>Admin Tools</h2>
                <ul>
                  <li><%= link_to 'Ads', ads_path %></li>
                  <li><%= link_to 'Ad videos', ad_videos_path %></li>
                  <li><%= link_to 'Articles', articles_path %></li>

                  <li><%= link_to 'Districts', districts_path %></li>
                  <li><%= link_to 'Classifieds', classifieds_path %></li>

                  <li><%= link_to 'Spots', spots_path %></li>
                  <li><%= link_to 'Divisions', divisions_path %></li>

                </ul>
              </div>
            </div>
          </div>
        </div>

      </div>
      <!-- <div class="mid_bot_bg"></div>-->
      <!--middle end -->

      <!--footer start -->
      <%= render 'layouts/footer' %>

      <!--footer start -->


    </div>
  </body>
</html>
