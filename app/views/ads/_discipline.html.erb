<div class="discipline">

  
  <%= form.fields_for :ad_disciplines, discipline, :child_index => (discipline.new_record? ? "index_to_replace_with_js" : nil) do |discipline_form| -%>

    <%= discipline_form.select  :discipline_id, Discipline.all.collect { |d| [d.name, d.id] }, :prompt => 'Choose Discipline' %>
    <%= discipline_form.select  :value, Ad::DISCIPLINES_VALUES, :prompt => 'Choose Level of Experience' %>

  <a class="removeDiscipline cross" href="javascript:void(0)" title="Remove"> <%= image_tag 'close.gif' , :width => 16%></a<br/>
  <% end -%>

</div>
