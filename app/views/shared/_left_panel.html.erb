        <% @featured_transports.each do |transport| %>
            <li>
              <%= link_to transport, :target => '_blank' do %>
                  <%= image_tag transport.main_image_url(:medium), :width => '175px' %>
                  <div class="title">
                    <%= transport.name %>
                  </div>

              <% end %>
            </li>
        <% end %>
      </ul>
  <% end %>
</div>
