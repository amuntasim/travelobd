<h1 class="admin_header">Listing associations</h1>
<div class="admin_new_link"><%= link_to 'New Association', new_association_path %></div>

<div class="msg_desc_info_big">

  <div class="f_bor evenRow ">
    <div class="fl w_200 pad_lr_5">
      <strong>Name</strong>
    </div>
    <div class="fl w_130 pad_lr_5">

    </div>
    <div class="fl w_130 pad_lr_5">

    </div>
    <div class="admin_links">

    </div>    
  </div>

  <% @associations.each do |association| %>

    <div class="f_bor <%= cycle('oddROw', 'evenRow') %> ">
      <div class="fl w_450 pad_lr_5">
        <%= association.name %>
      </div>
      <!--
      <div class="fl w_130 pad_lr_5">
        &nbsp;
      </div>
      <div class="fl w_130 pad_lr_5">

      </div>-->
      
      <div class="fl admin_links">
        <span><%= link_to 'Show', association %></span>
        <span><%= link_to 'Edit', edit_association_path(association) %></span>
        <span><%= link_to 'Destroy', association, :confirm => 'Are you sure?', :method => :delete %></span>
      </div>
    </div>

  <% end %>

</div>



