<% title localized_item_header(@profile) %>
<div class="pageHead">
  <%= localized_item_header(@profile) %>
</div>
<%= content_for :js_css_include do %>
    <%= javascript_include_tag 'jquery.form', 'jquery.validate' %>
    <%= stylesheet_link_tag 'jquery-ui' %>
<% end %>
<div class="item_form">
  <%= form_for(@profile, :html=> {:multipart => true, :id=> 'profile_form'}) do |f| %>
      <%= error_messages_for(@profile) %>

      <div class="form_summary" id="summary"></div>

      <div class="field item_form_row">
        <div class="label">
          <%= t('general.label.first_name') %>
          </div>
        <%= f.text_field :first_name %>
      </div>
      <div class="field item_form_row">
        <div class="label">
          <%= t('general.label.last_name') %>
          </div>
        <%= f.text_field :last_name %>
      </div>
      <div class="field item_form_row">
       <div class="label">
          <%= t('general.label.address') %>
          </div>
        <%= f.text_field :address %>
      </div>
      <!--<div class="field item_form_row">-->
        <!--<%= f.label :district %>-->
        <!--<%= f.text_field :district %>-->
      <!--</div>-->
      <!--<div class="field item_form_row">-->
        <!--<%= f.label :division %>-->
        <!--<%= f.text_field :division %>-->
      <!--</div>-->
      <!--<div class="field item_form_row">
        <%#= f.label :zip_code %>
        <%#= f.text_field :zip_code %>
      </div>
      <div class="field item_form_row">
        <%#= f.label :country_id %>
        <%#= f.select :country_id, Country.all.collect { |c| [c.name, c.id] }, :prompt=> t('helpers.select.prompt') %>
      </div>-->
      <div class="field item_form_row">
        <div class="label">
          <%= t('general.label.avatar') %>
          </div>


        <%= f.file_field :avatar %>
      </div>

      <div class="item_form_row">
       <div class="label">
          <%= t('general.label.settings') %>
          </div>
        <div class="f_edit_row photo_box">
          <%= f.fields_for :user, current_user do |usf| %>
              <div class="clear">
                <%= usf.check_box :message_notification -%>
                <%= t('general.label.notification_email') %>

              </div>
              <div class="clear">
                <%= usf.select :preferred_input_method, User::KEYBOARDS_HASH -%>
                 <%= t('general.label.preferred_keyboard') %>

              </div>
              <div class="clear">
                <%= usf.select :preferred_locale, User::LOCALES_HASH -%>
                 <%= t('general.label.preferred_language') %>
              </div>
          <% end %>
        </div>
      </div>
      <div class="submit_btn">
        <%= f.submit :class => 'search_button' %>
        <span class="search_button_right"> </span>
      </div>
  <% end %>
</div>
