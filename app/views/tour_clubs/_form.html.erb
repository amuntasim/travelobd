<%= content_for :js_css_include do %>
    <%= javascript_include_tag 'jquery.validate', 'thickbox' %>
    <%= stylesheet_link_tag 'jquery-ui', 'autocomplete', 'thickbox' %>
<% end %>

<%= form_for(@tour_club, :html => {:multipart => true, :id=> 'tour_club_form'}) do |f| %>
    <% @builder = f %>
    <% if @tour_club.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tour_club.errors.count, "error") %> prohibited this tour club from being
            saved:</h2>

          <ul>
            <% @tour_club.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="item_form_row">
      <label> Name<span>*</span>:</label>
      <%= f.text_field :name %>
    </div>

    <div class="item_form_row">
      <label> Logo:</label>
      <%= f.file_field :logo %>
    </div>


    <div class="item_form_row">
      <label>Description<span>*</span>:</label>
      <%= f.text_area :description, :rows => 20, :cols => 80 %>
    </div>

    <div class="submit_btn">
      <%= f.submit :class => 'search_button', :style => 'width:140px' %>
      <span class="search_button_right"> </span>
    </div>

<% end %>


<style type="text/css">


</style>
<script type="text/javascript">
    $(document).ready(function() {

        $("#tour_club_form").validate({
            errorPlacement: function(error, element) {
                error.remove();
            },


            rules: {
                'tour_club[name]': "required",
                'tour_club[description]' : "required"

            },
            messages: {
                comment: "Please enter a comment."
            }
        });

    });


</script>
