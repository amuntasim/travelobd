<% title @search_title || 'Tour Club list' %>

<div class="pageHead">
  <%= t('activerecord.models.tour_club') %>
  <div class="pageHeadOptions">

  </div>
</div>

<% @tour_clubs.each do |tour_club| %>
    <div class="listItem">
      <div class="fl listItemLogo">
        <%= image_tag tour_club.logo.url() %>
      </div>

      <div class="fl listItemDesc no_location">
        <div class="fl hotel_desc_info">
          <div class="fl title">
            <%= link_to truncate(tour_club.name, :length => 50), tour_club %>

          </div>
          <div class="fl description">
            <%= truncate(sanitize(tour_club.description).gsub(/<\/?[^>]*>/, ""), :length => 350) %>
          </div>

        </div>
        <div class="fl price_n_button">
          <div class="fl">
            <div class="fl price">

            </div>

          </div>
          <%= link_to t('general.label.details'), tour_club, :class => 'detail_link' %>
        </div>
      </div>

    </div>
<% end %>








