<h1 class="admin_header">Listing pages</h1>
<div class="admin_new_link"><%= link_to 'New static_page', new_static_page_path %></div>

<div class="msg_desc_info_big">

  <div class="f_bor evenRow ">
    <div class="fl w_200 pad_lr_5">
      <strong>Name</strong>
    </div>
    <div class="fl w_130 pad_lr_5">
      <strong>parmalink</strong>
    </div>
    <div class="fl w_130 pad_lr_5">
      <strong>Content</strong>
    </div>
    <div class="admin_links">

    </div>
  </div>

  <% @static_pages.each do |static_page| %>

    <div class="f_bor <%= cycle('oddROw', 'evenRow') %> ">
      <div class="fl w_200 pad_lr_5">
        <%= static_page.name %>
      </div>

      <div class="fl w_130 pad_lr_5">
        <%= static_page.parmalink%>
      </div>
     
      <div class="fl w_130 pad_lr_5">
        <%#= static_page.content %>
      </div>


      <div class="fl admin_links">
        <span><%= link_to 'Show', static_page %></span>
        <span><%= link_to 'Edit', edit_static_page_path(static_page) %></span>
        <span><%= link_to 'Destroy', static_page, :confirm => 'Are you sure?', :method => :delete %></span>
      </div>
    </div>

  <% end %>

</div>

