<h1 class="admin_header">Listing elements</h1>
<div class="admin_new_link"><%= link_to 'New Element', new_element_path %></div>

<div class="msg_desc_info_big">

  <div class="f_bor evenRow ">
    <div class="fl w_200 pad_lr_5">
      <strong>Name</strong>
    </div>
    <div class="fl w_130 pad_lr_5">
      Value
    </div>
    <div class="fl w_130 pad_lr_5">
      <strong></strong>
    </div>
    <div class="admin_links">

    </div>
  </div>

  <% @elements.each do |element| %>

      <div class="f_bor <%= cycle('oddROw', 'evenRow') %> ">
        <div class="fl w_200 pad_lr_5">
          <%= element.name %>
        </div>

        <div class="fl w_130 pad_lr_5">
          <%= element.value %>
        </div>
        <div class="fl w_130 pad_lr_5">
          &nbsp;
        </div>


        <div class="fl admin_links">
          <span><%= link_to 'Show', element %></span>
          <span><%= link_to 'Edit', edit_element_path(element) %></span>
          <span><%= link_to 'Destroy', element, :confirm => 'Are you sure?', :method => :delete %></span>
        </div>
      </div>

  <% end %>

</div>

