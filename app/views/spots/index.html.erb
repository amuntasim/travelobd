<% title @search_title %>

<div class="pageHead">
  <%= t('activerecord.models.spot') %>
  <div class="pageHeadOptions">

  </div>
</div>

<% @spots.each do |spot| %>
    <div class="listItem">
      <div class="fl listItemLogo">
        <%= image_tag spot.main_image_url(:thumb) %>
      </div>

      <div class="fl listItemDesc">
        <div class="fl hotel_desc_info">
          <div class="fl title">
            <%= link_to truncate(spot.title, :length => 50), spot %>
            <h4>
              <%= spot.location %>
            </h4>
          </div>
          <div class="fl description">
            <%= truncate(sanitize(spot.try(:description) || '').gsub(/<\/?[^>]*>/, ""), :length => 300) %>
          </div>

        </div>
        <div class="fl price_n_button">
          <div class="fl">
            <div class="fl price">

            </div>

          </div>
         <%= link_to t('general.label.details'), spot, :class => 'detail_link' %>
        </div>
      </div>

    </div>
<% end %>








