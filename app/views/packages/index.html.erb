<% title @search_title %>

<div class="pageHead">
  <%= t('activerecord.models.package') %>
  <div class="pageHeadOptions">
    <!--<b>Sort by: </b> <%= link_to 'Price', '#' %>-->
  </div>
</div>

<% @packages.each do |package| %>
    <div class="listItem">
      <div class="fl listItemLogo">
        <%= image_tag package.main_image_url(:thumb) %>
      </div>

      <div class="fl listItemDesc no_location">
        <div class="fl hotel_desc_info">
          <div class="fl title ">
            <%= link_to truncate(package.title, :length => 50), package %>
          </div>
          <div class="fl description">
            <%= truncate(sanitize(package.description).gsub(/<\/?[^>]*>/, ""), :length => 300) %>
          </div>

        </div>
        <div class="fl price_n_button">
          <div class="fl">
            <div class="fl price">
              <span><%= package.price.bangla %></span>
              <%= t('general.label.taka') %>
              <%= raw price_str(package) %>
            </div>
            <!--<div class="fl rating">-->
            <!--Like: 1000-->
            <!--<span style="float:right;">-->
            <!--Rating: 4-->
            <!--</span>-->
            <!--</div>-->
          </div>

          <%= link_to t('general.label.details'), package, :class => 'detail_link' %>
        </div>
      </div>

    </div>
<% end %>








