<script type="text/javascript">
    $(document).ready(function() {
        $('#spots_gallery').galleryView({
            panel_width: 505,
            panel_height: 230,
            overlay_height: 60,
            overlay_opacity: 0.4,
            overlay_color: '#333',
            transition_speed: 1500,
            transition_interval: 5000,
            background_color: 'transparent',
            border: '1px solid #ccc',
            pause_on_hover: true

        });
    });


</script>
