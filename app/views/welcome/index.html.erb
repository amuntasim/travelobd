<%= content_for :js_css_include do %>
  <%= stylesheet_link_tag 'jquery-ui', 'autocomplete' %>
  <%= javascript_include_tag 'jquery.easing.1.3', 'jquery.galleryview-1.1', 'jquery.timers-1.1.2' %>

<% end %>
<div class="home_left fl">
  <div class="home_left_header fl search_header">
    <div class="home_left_header_content">
      <%= t 'search' %>
    </div>

  </div>
  <div class="home_left_content fl">
    Search fields
  </div>

  <div class="home_left_header fl featured_hotel_header">
    <div class="home_left_header_content">
      <%= t 'featured_hotel' %>
    </div>

  </div>
  <div class="home_left_content fl">
    featured hotels
  </div>

  <div class="home_left_header fl latest_article_header">
    <div class="home_left_header_content">
      <%= t 'latest_article' %>
    </div>

  </div>
  <div class="home_left_content fl" id="articles">

  </div>

  <div class="home_left_header fl featured_transport_header">
    <div class="home_left_header_content">
      <%= t 'featured_transport' %>
    </div>

  </div>
  <div class="home_left_content fl">
    featured transports
  </div>
</div>

<div class="home_left_border fl">

</div>

<div class="home_middle fl">
  <div class="gallery_wrapper">
    <div class="galleryview" id="spots_gallery">

      <% @spots.each do |spot| %>
        <div class="panel ">
          <%= image_tag(spot.main_image_url(:medium), :class=> 'panel_image', :photo_id =>spot.id,:width => 505) %>
          <div class="panel-overlay">
            <h2>
              <%= spot.name %>
            </h2>
            <p>
              <span>
                <%= spot.short_description %>
              </span>
              <%= link_to 'Learn More..', spot %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="gallery_controll_images">
      <span class="nav-prev">
        <%= image_tag('/javascripts/themes/light/prev.png') %>
        Previous
      </span>
      <span class="nav-next">
        Next
        <%= image_tag('/javascripts/themes/light/next.png') %>
      </span>
    </div>
  </div>

  <h2>Hot Packages</h2>
  

</div>
<!--END home middle-->


<div class="home_right fl">

</div>

