<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mid_b_desk">
    <label><span>*</span>First name:</label>
    <%= f.text_field :first_name %>
  </div>
  <div class="mid_b_desk">
    <label><span>*</span>Last name:</label>
    <%= f.text_field :last_name %>
  </div>
  <div class="b_info_desk">
    <label><span>*</span>Address:</label>
    <%= f.text_field :address %>
  </div>
  <div class="sm_b_desk">
    <label>Suite/Apt</label>
    <%= f.text_field :suite %>
  </div>

  <div class="mid_b_desk">
    <label><span>*</span>District:</label>
    <%= f.text_field :district %>
  </div>
  <div class="mid_b_desk">
    <label><span>*</span>Country:</label>
    <%= f.text_field :country %>
  </div>

  <div class="mid_b_desk">
    <label><span>*</span>Division/Province:</label>
    <%= f.text_field :division %>
  </div>
  <div class="sm_b_desk">
    <label><span>*</span>Zip Code:</label>
    <%= f.text_field :zip_code %>
  </div>
  <div class="mid_b_desk clear">
    <label><span>*</span>Phone:</label>
    <%= f.text_field :phone %>
  </div>
  <div class="mid_b_desk">
    <label><span>*</span>Email:</label>
    <%= f.text_field :email %>
  </div>

  <div class="mid_b_desk">
    <label>Payment Type:</label>
    <%= f.select :card_type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]] %>
  </div>

  <div class="b_info_desk">
    <label><span>*</span>Name On Card:</label>
    <%= f.text_field :name_on_card %>
  </div>
  <div class="sm_b_desk">
    <label><span>*</span>Security Code:</label>
    <%= f.text_field :card_verification %>
  </div>

  <div class="mid_b_desk">
    <label>Credit Card Number:</label>
    <%= f.text_field :card_number %>
  </div>
  <div class="mid_b_desk">
    <label><span>*</span>Expiration Date:</label>
    <%= f.date_select :card_expires_on, :discard_day => true, :start_year => Date.today.year, :end_year => (Date.today.year+10), :add_month_numbers => true %>
  </div>

  <div class="placeOrder">
    <input name="" type="submit" value=""/>
  </div>
<% end %>