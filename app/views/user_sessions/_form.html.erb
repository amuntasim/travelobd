<%= form_for(@user_session, :url => user_session_path) do |f| %>
    <% if @user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user_session.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="loginBox">
      <div class="loginFields">
        <div class="log_input_row">
          <%= f.label :email %> <br/>
          <%= f.text_field :email %>
        </div>
        <div class="log_input_row">
          <%= f.label :password %> <br/>
          <%= f.password_field :password %>
        </div>
        <div class="actions loginActions">
          <%= f.submit 'Login', :class => 'search_button' %>
          <span class="search_button_right"> </span>
        </div>
      </div>
      <div class="loginRight">
        <%= link_to 'Forgot Password?', new_password_reset_url %>
        <div class="loginRightText clear">
          If you forgot your password please click here to recover your password
        </div>

        <div class="loginRightText2 clear">
          If you are not registered yet please click below to create new account
        </div>

        <div class="actions newAccountActions">
          <%= link_to 'Create New Account', new_user_path, :class => 'search_button'  %>
          <span class="search_button_right"> </span>
        </div>
      </div>

      <div class="twitter_facebook">
        <div class="box">
          <a href="/auth/facebook" class="fb_button fb_button_medium"><span class="fb_button_text">Sign in
            with Facebook</span> </a>
        </div>
        <div class="box twitter right_margin_zero">
          <a href="/auth/twitter"><img src="http://a0.twimg.com/images/dev/buttons/sign-in-with-twitter-d-sm.png" alt="Sign-in-with-twitter-d-sm" title=""/></a>
        </div>
      </div>
      <div class="field">

      </div>

    </div>


<% end %>
