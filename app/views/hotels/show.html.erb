<% end %>

<%= content_for :over_mid_content do %>
    <div class="redhead_row">
      <div class="subLink">
        <ul>
          <li><a href="#TB_inline?dd=4&width=400&height=300&inlineId=send_to_friend_lb&modal=true" class="thickbox">Send
            To a Friend</a>
          </li>

          <li>
            <%= link_to 'Print This', print_hotel_path(@hotel) %>
