          <div id="message_status" class="white_Desc">

          </div>
          <div class="white_Desc">
            <label>Your Name:</label>
            <%= f.text_field :name %>
          </div>
          <div class="white_Desc">
            <label>Email:</label>
            <%= f.text_field :email %>
