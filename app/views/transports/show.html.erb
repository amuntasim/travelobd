<% title @transport.name %>
<%= content_for :js_css_include do %>
    <%= javascript_include_tag 'jquery.easing.1.3', 'jquery.galleryview-1.1', 'jquery.timers-1.1.2', 'thickbox' %>
    <%= javascript_include_tag 'jquery.validate' %>
    <%= stylesheet_link_tag 'thickbox' %>


<% end %>

<%= content_for :over_mid_content do %>
    <div class="redhead_row">
      <div class="subLink">
        <ul>
          <li>
            <a href="#TB_inline?dd=4&width=400&height=400&inlineId=send_message_to_owner_lb&modal=true" class="thickbox">Send
              Message to Owner</a>
          </li>

          <li><a href="#TB_inline?dd=4&width=400&height=300&inlineId=send_to_friend_lb&modal=true" class="thickbox">Send
            To a Friend</a>
          </li>

          <li>
            <%= link_to 'Print', print_transport_path(@transport) %>
          </li>
          <li id="saved_item_li">
            <% if @already_saved %>
                <%= link_to '[ Remove ]', 'javascript:void(0)', :class => 'remove_from_save_listing', :sl_id=> @already_saved.id, :savable_id => @transport.id, :savable_type => 'Ad' %>  <%= link_to 'Already Saved', my_saved_listings_path %>  &nbsp;
            <% else %>
                <%= link_to 'Save This', 'javascript:void(0)', :class => 'save_item', :savable_type => 'Ad', :item_id=> @transport.id %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
<% end %>

<div class="pageHead">
  <%= @transport.name %>
</div>

<%= render :partial => 'shared_partials/detail_page_photo_gallery', :locals => {:items => @transport.assets} %>

<div class="item_details">

  <div class="itemDetail pad_TL0"><%= @transport.description %></div>

  <div class="good_item_head">Branch Locations</div>
  <div class="itemDetail" style="width:682px;">

    <% @transport.locations_by_districts.each do |district, locations| %>
        <div class="eventTitle">
          <%= district.name %>
        </div>
        <div class="branchLocations">
          <% branch_location_index = -1 %>
          <% locations.each do |location| %>
              <% branch_location_index += 1 %>
              <div class="branchLocation <%= 'clear' if branch_location_index % 3 == 0 %>">
                <span><b><%= location.location %></b></span>
                <span>Address: <%= location.address %></span>
                <span>Phone: <%= location.phone %></span>
              </div>
          <% end %>
        </div>
    <% end %>
  </div>

  <div class="good_item_head">Departure Schedules</div>
  <div class=" itemDetailDeparture">
    <%= raw departure_schedules(@transport) %>
  </div>

  <div class="good_item_head">Policies</div>
  <div class="itemDetail">
    <% @transport.policies.each do |policy| %>
        <div class="eventTitle clear"><b><%= policy.title %></b></div>
        <div class="eventDetail clear"><%= policy.detail %></div>
    <% end %>
  </div>

  <div class="good_item_head">Contacts</div>
  <div class="itemDetail">
    <% @transport.contacts.each do |contact| %>
        <div class=" clear"><b><%= contact.name %></b></div>
        <div class="eventDetail clear">Phone: <%= contact.phone %></div>
    <% end %>
  </div>

</div>

<%= render :partial => 'shared_partials/detail_page_comment', :locals => {:item => @transport, :rating => true}  %>


<div id="send_message_to_owner_lb" style="display: none">
  <%= image_tag 'close.jpeg', :class=> 'close_lb', :id => 'close_send_message_to_owner_lb', :title => 'close' %>
  <%= render :partial => 'messages/ajax_form', :locals => {:message_target => @transport} %>

</div>

<%= render :partial => 'shared_partials/send_to_friends', :locals => {:item => 'transport', :item_id => @transport.id} %>


<style type="text/css">
    .branchLocations {
        width: 100%;
        float: left;
        margin-bottom: 10px;
    }

    .branchLocation {
        width: 217px;
        float: left;
        margin: 5px 10px 10px 0;
    }

    .branchLocation span {
        float: left;
        width: 217px;
    }

    div.departure_times {
        width: 680px;
        float: left;
    }

    span.departure_time {
        width: 100px;
        float: left;
        margin: 5px 10px 5px 0
    }

    .itemDetailDeparture {
        width: 702px;
        float: left;
    }

    .itemDetailDeparture .evenRow, .itemDetailDeparture .oddRow {
        width: 682px;
        padding: 5px 10px;
        margin-bottom:10px;
    }

    .itemDetailDeparture .evenRow {
        background: none;
        color:#000000;
    }
</style>
<script type="text/javascript">
    $(document).ready(function() {
        $('#detail_page_photo_gallery').galleryView(TBD.DETAIL_PAGE_PHOTO_GALLERY_OPTIONS);
    });


</script>