<div class="event itinerary">

  <%= form.fields_for :itineraries, itinerary, :child_index => (itinerary.new_record? ? "index_to_replace_with_js" : nil) do |itinerary_form| %>
      <div class="package_event_time">
        <%= t('general.label.title')%>
      </div>

      <div class="package_event_detail">
        <%= t('general.label.details')%>
      </div>
      <div class="package_event_time">
        <%= itinerary_form.text_field :title, :class => 'event' %>
      </div>
      <div class="package_event_detail">
        <%= itinerary_form.text_area :detail, :class => 'eventDetail' %>
      </div>
      <div class="deleteLink">
        <% if itinerary.new_record? %>
            <span class="removeEventField"> <%= t('general.label.remove')%></span>
        <% else %>
            <%= itinerary_form.check_box :_destroy %>
            Delete
        <% end %>
      </div>
  <% end %>

</div>