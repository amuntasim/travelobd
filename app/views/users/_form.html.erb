<%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="loginBox">
      <div class="loginFields createAccount">
        <% if @user.new_record? %>
            <%= f.fields_for :profile, @user.profile do |pf| %>
                <div class="log_input_row">
                  <%= pf.label :name %>
                  <br/>
                  <%= pf.text_field :first_name %>
                </div>
            <% end %>

            <div class="log_input_row">
              <%= f.label :email %>
              <br/>
              <%= f.text_field :email %>
            </div>
        <% end %>
        <% unless session[:omniauth] %>
            <div class="log_input_row">
              <%= f.label :password %>
              <br/>
              <%= f.password_field :password %>
            </div>
            <div class="log_input_row">
              <%= f.label :password_confirmation %>
              <br/>
              <%= f.password_field :password_confirmation %>
            </div>
        <% end %>
        <div class="actions loginActions">
          <%= f.submit 'Create Account', :class => 'search_button' %>
          <span class="search_button_right"> </span>
        </div>
      </div>
      <div class="loginRight">
        <%= link_to 'Forgot Password?', new_password_reset_url %>
        <div class="loginRightText clear">
          If you forgot your password please click here to recover your password
        </div>

        <div class="loginRightText2 clear">
          If you already have an account click the link below to login
        </div>

        <div class="actions loginLink">
          <%= link_to 'Login', login_path, :class => 'search_button' %>
          <span class="search_button_right"> </span>
        </div>
      </div>

      <div class="twitter_facebook">
        <div class="box">
          <a href="/auth/facebook" class="fb_button fb_button_medium"><span class="fb_button_text">Sign in
               with Facebook</span> </a>
        </div>
        <div class="box twitter right_margin_zero">
          <a href="/auth/twitter"><img src="http://a0.twimg.com/images/dev/buttons/sign-in-with-twitter-d-sm.png" alt="Sign-in-with-twitter-d-sm" title=""/></a>
        </div>
      </div>
      <div class="field">

      </div>

    </div>

<% end %>
