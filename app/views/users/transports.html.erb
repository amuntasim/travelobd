<div class="dashboard_content_header fl search_header">
  <div class="dashboard_content_header_content">
    <div class="fl">
      <%= t('general.label.my_listed_transports') %>
    </div>
    <div class="add_link">
      <%= link_to t('general.label.add_item', :item => t('activerecord.models.transport')), new_transport_path %>
    </div>
  </div>

</div>
<div class="dashboard_content_item fl">
  <% if @transports.size > 0 %>
      <% @transports.each do |transport| %>
          <div class=" <%= 'inactive' unless transport.active %> dc_item fl ">
            <div class="dc_item_image fl">
              <%= image_tag transport.main_image_url(:thumb) %>
            </div>
            <div class="dc_item_text fl">
              <div class="title">
                <%= link_to transport.name, transport %>
              </div>

              <div class="desc">
                <%= truncate strip_tags(transport.description), :length => 170 %>
              </div>

            </div>
            <div class="dc_item_links fl">
              <%= link_to t('general.label.details'), transport %>
              <%= link_to t('general.label.edit'), edit_transport_path(transport) %>
              <%= link_to t('helpers.delete'), transport, :confirm => 'You are going to delete a transport. Are you sure?', :method => :delete %>
            </div>
          </div>
      <% end %>
  <% else %>
      <h3>
        <%= t('general.label.no_item_found', :item => t('activerecord.models.transport')) %>
      </h3>
  <% end %>
</div>